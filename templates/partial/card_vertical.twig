<div class="card h-100">
	<!-- Card image -->
	<div class="view hover-overlay overlay">
		<img class="card-img-top" src="{{ card.image }}" alt="{{ card.title }}">
		<a href="{{ card.link }}">
			<div class="mask"></div>
		</a>
	</div>
	<!-- Card content -->
	<div class="card-body">
		<h5 class="card-title">{{ card.title }}</h5>
		<p class="card-text">{{ card.description }}</p>
	</div>
</div>