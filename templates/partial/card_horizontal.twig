<div class="card">
	<div class="row g-0">
		<!-- Image block -->
		<div class="col-5 d-flex justify-content-center align-items-center">
			<div class="view hover-overlay overlay">
				<img class="img-fluid" src="{{ card.img_src }}" alt="{{ card.title }}">
				<a href="{{ card.link }}">
					<div class="mask"></div>
				</a>
			</div>
		</div>

		<!-- Text block -->
		<div class="col-7">
			<div class="card-body">
				<h5 class="card-title">{{ card.title }}</h5>
				{% if card.description %}
				<p class="card-text">{{ card.description }}</p>
				{% elseif card.features %}
				<ul>
					{% for feature in card.features %}
						<li>{{ feature }}</li>
					{% endfor %}
				</ul>
				{% endif %}
			</div>
		</div>
	</div>
</div>
