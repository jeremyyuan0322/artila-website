{# text_page.twig #}
{% extends "/skeleton/base.twig" %}

{% block content %}
<div class="container my-5">
	<h1 class="bg-secondary text-white mb-4 p-2">{{ page_title }}</h1>
	{% for item in content %}
		{% if item.type == 'header' %}
      {% if item.level == 1 %}
        <div class="mb-4 p-2">
          <h1>{{ item.text }}</h1>
        </div>
      {% elseif item.level == 2 %}
        <div class="border-start border-5 border-primary mb-3">
          <h2 class=" border-bottom border-2 ps-3">{{ item.text }}</h2>
        </div>
      {% elseif item.level == 3 %}
         <h3>{{ item.text }}</h3>
      {% endif %}
    {% elseif item.type == 'paragraph' %}
      <p>{{ item.text | raw }}</p>
    {% elseif item.type == 'list' %}
     <ul>
        {% for li in item.items %}
          <li>{{ li | raw }}</li>
        {% endfor %}
      </ul>
	  {% endif %}
  {% endfor %}
</div>
{% endblock %}
