{# accessoryList.twig #}

{% extends "skeleton/family.twig" %}

{% block content %}
	<div class="container my-5">
		<div class="card mb-3 shadow-0">
			<div class="row g-0">
				<!-- 图片部分 -->
				<div class="col-md-5 order-md-2 d-flex align-items-center justify-content-center">
					<img src="{{ banner.img_src }}" alt="{{ banner.heading }}" class="img-fluid">
				</div>
				<!-- 文本部分 -->
				<div class="col-md-7 order-md-1">
					<div class="card-body">
						<h2 class="card-title">{{ banner.heading }}</h2>
						<p class="card-text">{{ banner.paragraph }}</p>
					</div>
				</div>
			</div>
		</div>
	</div>

	<div class="container mt-3">
		{% for card in products %}
			<div class="card">
				<div class="row g-0">
					<!-- 左边图片区块 -->
					<div class="col-md-4 d-flex align-items-center justify-content-center">
						<img src="{{ card.img_src }}" alt="{{ card.img_alt }}" class="img-fluid">
					</div>
					<!-- 右边特性列表区块 -->
					<div class="col-md-8">
						<div class="card-body">
							<h5 class="card-title">{{ card.title }}</h5>
							<p class="card-text">{{ card.description }}</p>
							<ul class="card-text">
								<li>Model No.</li>
								<ul>
									{% for model in card.model_no %}
										<li>{{ model }}</li>
									{% endfor %}
								</ul>
							</ul>
						</div>
					</div>
				</div>
			</div>
		{% endfor %}
	</div>
{% endblock %}
